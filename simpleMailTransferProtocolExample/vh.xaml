<Window x:Class="simpleMailTransferProtocolExample.vh"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:simpleMailTransferProtocolExample"
        mc:Ignorable="d"
        Title="vh" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
          
            <Button x:Name="loadButton" Content="Load" Margin="5" Click="loadButton_Click" />
            <Button Click="btnDelete_Click" Name="btnDelete" Content="Удалить письмо" Visibility="Visible" HorizontalAlignment="Right"></Button>
            <GroupBox Header="id">
                <TextBox x:Name="txtMessageId" />
            </GroupBox>
        

        </StackPanel>
        <ListBox x:Name="sentEmailsList" Grid.Row="1" Margin="5">
     
           
        </ListBox>

    </Grid>
</Window>
    